#!/bin/bash

set -eo pipefail

# Source the library
source "$(dirname "$0")/_lib"

if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
    print "${BOLD}Remove a VM image${NC}"
    print ""
    print "${BOLD}${CYAN}Usage:${NC} vmx image remove [OPTIONS]${NC}"
    print ""
    printYellow "Options:"
    print "  --distro DISTRO                 Linux distribution (required)"
    print "  --version VERSION               Distribution version (required)"
    print ""
    printYellow "Supported Images:"
    print "  ubuntu: 20.04, 22.04, 24.04"
    print "  debian: 11, 12"
    print "  fedora: 38, 39, 40"
    print ""
    printYellow "Examples:"
    print "  vmx image remove --distro debian --version 12"
    print "  vmx image remove --distro fedora --version 40"
    print "  vmx image remove --distro ubuntu --version 24.04"
    exit 0
fi

# Parse options
while [[ $# -gt 0 ]]; do
    case "$1" in
        --distro) distro="$2"; shift 2 ;;
        --version) version="$2"; shift 2 ;;
        *) printRed "Unknown option: $1"; exit 1 ;;
    esac
done

# Require both distro and version
if [[ -z "$distro" ]]; then
    printRed "Missing required option: --distro"
    exit 1
fi

if [[ -z "$version" ]]; then
    printRed "Missing required option: --version"
    exit 1
fi

_remove_image() {
    distro="$1"
    version="$2"
    image_dir="${VMX_IMAGES_DIR}/${distro}/${version}"

    if [[ ! -d "${image_dir}" ]]; then
        printRed "Image does not exist: ${distro}:${version}"
        exit 1
    fi

    printCyan "Removing image: ${distro}:${version}"
    sudo rm -rf "${image_dir}"

    printGreen "Image removed successfully"
}

_remove_image "${distro}" "${version}"
